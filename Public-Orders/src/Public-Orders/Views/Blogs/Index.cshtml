@using PublicOrders.Data.AppData.Models
@model IEnumerable<PublicOrders.Data.AppData.Models.Blog>

@{
    ViewData["Title"] = "Blogs";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Blogs" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.BlogId)</th>
        <th>@Html.DisplayNameFor(model => model.Url)</th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
        </td>
    </tr>
}
</table>
